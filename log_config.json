{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {
        "request_id": {
            "()": "question_app.logging.RequestIdFilter",
            "max_len": 8
        }
    },
    "formatters": {
        "default": {
            "()": "uvicorn.logging.DefaultFormatter",
            "fmt": "%(levelprefix)s %(asctime)s %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "use_colors": false
        },
        "access": {
            "()": "uvicorn.logging.AccessFormatter",
            "fmt": "%(levelprefix)s %(asctime)s %(request_id)s %(client_addr)s - \"%(request_line)s\" %(status_code)s",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "use_colors": false
        },
        "debug": {
            "()": "uvicorn.logging.DefaultFormatter",
            "fmt": "%(levelprefix)s %(asctime)s %(request_id)s %(name)s:%(lineno)d %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "use_colors": false
        }
    },
    "handlers": {
        "default": {
            "filters": ["request_id"],
            "formatter": "default",
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/default.log",
            "when": "D",
            "encoding": "utf8"
        },
        "access": {
            "filters": ["request_id"],
            "formatter": "access",
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/access.log",
            "when": "D",
            "encoding": "utf8"
        },
        "debug": {
            "filters": ["request_id"],
            "formatter": "debug",
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/debug.log",
            "when": "D",
            "encoding": "utf8"
        }
    },
    "loggers": {
        "uvicorn": {"handlers": ["default"], "level": "INFO", "propagate": false},
        "uvicorn.error": {"level": "INFO"},
        "uvicorn.access": {"handlers": ["access"], "level": "INFO", "propagate": false},
        "question_app": {"handlers": ["debug"], "level": "DEBUG"}
    }
}